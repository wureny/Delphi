{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://delphi.local/schemas/polymarket-ontology.schema.json",
  "title": "Delphi Polymarket Ontology Bundle",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "generated_at",
    "sources",
    "events",
    "markets",
    "outcomes",
    "price_points",
    "order_book_snapshots",
    "trade_prints",
    "liquidity_snapshots",
    "news_signals",
    "resolution_states",
    "market_microstructure_states"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "pattern": "^v[0-9]+\\.[0-9]+$"
    },
    "generated_at": {
      "type": "string",
      "format": "date-time"
    },
    "sources": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/Source"
      }
    },
    "events": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/Event"
      }
    },
    "markets": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/Market"
      }
    },
    "outcomes": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/Outcome"
      }
    },
    "price_points": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/PricePoint"
      }
    },
    "order_book_snapshots": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/OrderBookSnapshot"
      }
    },
    "trade_prints": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/TradePrint"
      }
    },
    "liquidity_snapshots": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/LiquiditySnapshot"
      }
    },
    "news_signals": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/NewsSignal"
      }
    },
    "resolution_states": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/ResolutionState"
      }
    },
    "market_microstructure_states": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/MarketMicrostructureState"
      }
    }
  },
  "$defs": {
    "Source": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "id",
        "name",
        "type",
        "uri",
        "ingested_at"
      ],
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "name": {
          "type": "string",
          "minLength": 1
        },
        "type": {
          "type": "string",
          "enum": [
            "api",
            "stream",
            "manual",
            "derived"
          ]
        },
        "uri": {
          "type": "string",
          "minLength": 1
        },
        "ingested_at": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "Event": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "id",
        "title",
        "slug",
        "category",
        "start_time",
        "end_time",
        "status",
        "market_ids",
        "source_id"
      ],
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "title": {
          "type": "string",
          "minLength": 1
        },
        "slug": {
          "type": "string",
          "minLength": 1
        },
        "category": {
          "type": "string",
          "enum": [
            "crypto",
            "finance"
          ]
        },
        "sub_category": {
          "type": [
            "string",
            "null"
          ]
        },
        "start_time": {
          "type": "string",
          "format": "date-time"
        },
        "end_time": {
          "type": "string",
          "format": "date-time"
        },
        "status": {
          "type": "string",
          "enum": [
            "open",
            "closed",
            "resolved"
          ]
        },
        "market_ids": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "source_id": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "Market": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "id",
        "event_id",
        "question",
        "slug",
        "market_type",
        "condition_id",
        "question_id",
        "close_time",
        "trading_state",
        "outcome_ids",
        "orderbook_enabled",
        "source_id"
      ],
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "event_id": {
          "type": "string",
          "minLength": 1
        },
        "question": {
          "type": "string",
          "minLength": 1
        },
        "slug": {
          "type": "string",
          "minLength": 1
        },
        "market_type": {
          "type": "string",
          "enum": [
            "binary"
          ]
        },
        "condition_id": {
          "type": "string",
          "minLength": 1
        },
        "question_id": {
          "type": "string",
          "minLength": 1
        },
        "description": {
          "type": "string"
        },
        "close_time": {
          "type": "string",
          "format": "date-time"
        },
        "trading_state": {
          "type": "string",
          "enum": [
            "active",
            "inactive",
            "closed",
            "resolved",
            "archived"
          ]
        },
        "outcome_ids": {
          "type": "array",
          "minItems": 2,
          "maxItems": 2,
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "orderbook_enabled": {
          "type": "boolean"
        },
        "source_id": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "Outcome": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "id",
        "market_id",
        "label",
        "binary_side",
        "token_id",
        "complement_outcome_id",
        "current_probability"
      ],
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "market_id": {
          "type": "string",
          "minLength": 1
        },
        "label": {
          "type": "string",
          "minLength": 1
        },
        "binary_side": {
          "type": "string",
          "enum": [
            "yes",
            "no"
          ]
        },
        "token_id": {
          "type": "string",
          "minLength": 1
        },
        "complement_outcome_id": {
          "type": "string",
          "minLength": 1
        },
        "current_probability": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        }
      }
    },
    "PricePoint": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "id",
        "outcome_id",
        "timestamp",
        "probability",
        "price",
        "source_id"
      ],
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "outcome_id": {
          "type": "string",
          "minLength": 1
        },
        "timestamp": {
          "type": "string",
          "format": "date-time"
        },
        "probability": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "price": {
          "type": "number",
          "minimum": 0
        },
        "source_id": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "OrderBookLevel": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "price",
        "size"
      ],
      "properties": {
        "price": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "size": {
          "type": "number",
          "minimum": 0
        }
      }
    },
    "OrderBookSnapshot": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "id",
        "market_id",
        "outcome_id",
        "timestamp",
        "best_bid",
        "best_ask",
        "spread",
        "midpoint",
        "bid_depth_top_n",
        "ask_depth_top_n",
        "tick_size",
        "bid_levels",
        "ask_levels",
        "source_id"
      ],
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "market_id": {
          "type": "string",
          "minLength": 1
        },
        "outcome_id": {
          "type": "string",
          "minLength": 1
        },
        "timestamp": {
          "type": "string",
          "format": "date-time"
        },
        "best_bid": {
          "type": [
            "number",
            "null"
          ],
          "minimum": 0,
          "maximum": 1
        },
        "best_ask": {
          "type": [
            "number",
            "null"
          ],
          "minimum": 0,
          "maximum": 1
        },
        "spread": {
          "type": [
            "number",
            "null"
          ],
          "minimum": 0,
          "maximum": 1
        },
        "midpoint": {
          "type": [
            "number",
            "null"
          ],
          "minimum": 0,
          "maximum": 1
        },
        "bid_depth_top_n": {
          "type": "number",
          "minimum": 0
        },
        "ask_depth_top_n": {
          "type": "number",
          "minimum": 0
        },
        "tick_size": {
          "type": "number",
          "minimum": 0
        },
        "bid_levels": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/OrderBookLevel"
          }
        },
        "ask_levels": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/OrderBookLevel"
          }
        },
        "source_id": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "TradePrint": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "id",
        "market_id",
        "outcome_id",
        "timestamp",
        "price",
        "size",
        "side",
        "fee_rate_bps",
        "source_id"
      ],
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "market_id": {
          "type": "string",
          "minLength": 1
        },
        "outcome_id": {
          "type": "string",
          "minLength": 1
        },
        "timestamp": {
          "type": "string",
          "format": "date-time"
        },
        "price": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "size": {
          "type": "number",
          "minimum": 0
        },
        "side": {
          "type": "string",
          "enum": [
            "buy",
            "sell"
          ]
        },
        "fee_rate_bps": {
          "type": "number",
          "minimum": 0
        },
        "source_id": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "LiquiditySnapshot": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "id",
        "market_id",
        "timestamp",
        "liquidity_usd",
        "volume_24h_usd"
      ],
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "market_id": {
          "type": "string",
          "minLength": 1
        },
        "timestamp": {
          "type": "string",
          "format": "date-time"
        },
        "liquidity_usd": {
          "type": "number",
          "minimum": 0
        },
        "volume_24h_usd": {
          "type": "number",
          "minimum": 0
        }
      }
    },
    "NewsSignal": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "id",
        "event_id",
        "market_id",
        "timestamp",
        "headline",
        "url",
        "sentiment_score",
        "source_id"
      ],
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "event_id": {
          "type": "string",
          "minLength": 1
        },
        "market_id": {
          "type": [
            "string",
            "null"
          ]
        },
        "timestamp": {
          "type": "string",
          "format": "date-time"
        },
        "headline": {
          "type": "string",
          "minLength": 1
        },
        "url": {
          "type": "string",
          "minLength": 1
        },
        "sentiment_score": {
          "type": "number",
          "minimum": -1,
          "maximum": 1
        },
        "source_id": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "ResolutionState": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "id",
        "market_id",
        "resolved",
        "resolution_time",
        "winning_outcome_id",
        "resolution_notes",
        "evidence"
      ],
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "market_id": {
          "type": "string",
          "minLength": 1
        },
        "resolved": {
          "type": "boolean"
        },
        "resolution_time": {
          "type": "string",
          "format": "date-time"
        },
        "winning_outcome_id": {
          "type": [
            "string",
            "null"
          ],
          "minLength": 1
        },
        "resolution_notes": {
          "type": "string",
          "minLength": 1
        },
        "evidence": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "MarketMicrostructureState": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "id",
        "market_id",
        "outcome_id",
        "timestamp",
        "displayed_probability",
        "display_price_source",
        "robust_probability",
        "book_reliability_score",
        "trade_reliability_score",
        "manipulation_risk_score",
        "depth_imbalance",
        "quote_trade_divergence",
        "signal_weights",
        "explanatory_tags",
        "source_id"
      ],
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "market_id": {
          "type": "string",
          "minLength": 1
        },
        "outcome_id": {
          "type": "string",
          "minLength": 1
        },
        "timestamp": {
          "type": "string",
          "format": "date-time"
        },
        "displayed_probability": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "display_price_source": {
          "type": "string",
          "enum": [
            "midpoint",
            "last_trade",
            "derived"
          ]
        },
        "robust_probability": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "book_reliability_score": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "manipulation_risk_score": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "depth_imbalance": {
          "type": "number",
          "minimum": -1,
          "maximum": 1
        },
        "quote_trade_divergence": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "explanatory_tags": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "source_id": {
          "type": "string",
          "minLength": 1
        },
        "trade_reliability_score": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "signal_weights": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "displayed",
            "book_anchor",
            "trade_anchor",
            "fallback_anchor"
          ],
          "properties": {
            "displayed": {
              "type": "number",
              "minimum": 0,
              "maximum": 1
            },
            "book_anchor": {
              "type": "number",
              "minimum": 0,
              "maximum": 1
            },
            "trade_anchor": {
              "type": "number",
              "minimum": 0,
              "maximum": 1
            },
            "fallback_anchor": {
              "type": "number",
              "minimum": 0,
              "maximum": 1
            }
          }
        }
      }
    }
  }
}
